<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="10/28/15"
        android:id="@+id/grade_dueDate"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grade_taskTitle"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="Task Title"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:gravity="right"
        android:foregroundGravity="right"
        android:layout_weight="0"
        android:id="@+id/grade_extraInfo">

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/grade_taskCategoryTitle"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="10%"
                android:id="@+id/grade_weight"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_gravity="center_vertical|right"
                android:allowUndo="false" />
        </LinearLayout>

        <TextView
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:id="@+id/grade_taskGrade"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_vertical|right" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="Received"
            android:id="@+id/grade_statusMsg"
            android:textSize="15sp"
            android:layout_gravity="center_vertical|right"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>